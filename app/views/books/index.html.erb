
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book_path(book.id) %></td>
        <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h2>New book</h2>


<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
<% end %>

  <%= f.label :Title %>
    <%= f.text_field :title %>
    <br></br>
  <%= f.label :Body %>
    <%= f.text_area :body %>
    
    <br><%= f.submit 'Create Book' %></br>
<% end %>